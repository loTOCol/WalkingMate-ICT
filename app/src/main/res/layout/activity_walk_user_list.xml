<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/walkuserlistbackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_music_home_gradient"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_mate_filter_panel"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="신청 목록"
            android:textColor="@color/music_text_main"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="프로필을 눌러 상세 정보를 볼 수 있어요"
            android:textColor="@color/music_text_sub"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_map_goal_badge"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:text="수락 완료"
            android:textColor="@color/music_text_main"
            android:textSize="13sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/walkuserlist_accept"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:divider="@android:color/transparent"
            android:dividerHeight="8dp"
            android:listSelector="@color/transparent"
            android:paddingTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_map_goal_badge"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:text="수락 대기"
            android:textColor="@color/music_text_main"
            android:textSize="13sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/walkuserlist_waiting"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.25"
            android:divider="@android:color/transparent"
            android:dividerHeight="8dp"
            android:listSelector="@color/transparent"
            android:paddingTop="8dp" />

        <Button
            android:id="@+id/delete_walk"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_walk_delete_button"
            android:text="게시물 삭제"
            android:textAllCaps="false"
            android:textColor="@color/music_text_main"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/askdel_walkuserlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_mate_filter_panel"
        android:orientation="vertical"
        android:padding="14dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/title_askdel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="제목"
            android:textColor="@color/music_text_main"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="정말 삭제하시겠습니까?"
            android:textColor="@color/music_text_sub"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_walkuser"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:background="@drawable/bg_map_option_item"
                android:text="취소"
                android:textAllCaps="false"
                android:textColor="@color/music_text_main"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/delete_walkuser"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:background="@drawable/bg_walk_delete_button"
                android:text="삭제"
                android:textAllCaps="false"
                android:textColor="@color/music_text_main"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
