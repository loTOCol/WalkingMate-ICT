<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_music_surface"
    android:orientation="vertical"
    android:padding="18dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRACKING"
        android:textColor="@color/music_text_sub"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/scdream9"
        android:text="산책을 종료할까요?"
        android:textColor="@color/music_text_main"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_end_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_map_goal_badge"
        android:gravity="center"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:text="걸음 0보 · 거리 0.000 km"
        android:textColor="@color/music_text_main"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_end_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_music_action_button"
        android:text="저장 후 종료"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_end_discard"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_map_option_item"
        android:text="저장 없이 종료"
        android:textAllCaps="false"
        android:textColor="@color/music_text_main"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_end_continue"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:text="계속 걷기"
        android:textAllCaps="false"
        android:textColor="@color/music_text_sub"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>
