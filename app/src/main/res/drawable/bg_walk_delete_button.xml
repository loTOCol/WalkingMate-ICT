<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FFEBC8B6" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="#FFD8A998" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFF8E5DC" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="#FFE2B9AA" />
        </shape>
    </item>
</selector>
